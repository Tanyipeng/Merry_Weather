page,
.m {
  height: 100%;
  overflow-y: scroll;
}

.inputControl {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  background-color: #eee;
  padding: 0 20rpx;
  height: 64rpx;
}

.inp {
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx 20rpx 10rpx 0;
}

.clearInp {
  background-color: rgba(0, 0, 0, .2);
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  margin-right: 50rpx;
  position: relative;
}

.clearInp::before {
  content: 'x';
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -56%);
  font-size: 24rpx;
}

.cancel {
  color: darkgoldenrod;
}

.map {
  position: fixed;
  width: 100%;
  height: auto;
  top: 64rpx;
  bottom: 0;
}

.map .cityList {
  height: 100%;
  background-color: #fff;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
}

.map .cityList .hotCity .title {
  font-size: 36rpx;
  font-weight: bold;
}

.map .cityList .hotCity .contentWrapper {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.map .cityList .hotCity .contentWrapper .content {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  background-color: #eee;
  margin: 0 20rpx 20rpx 0;
}

.map .cityList .searchList {
  height: 100%;
  overflow-y: scroll;
}

.map .cityList .searchList .list {
  line-height: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  padding: 30rpx 0;
  position: relative;
}

.map .cityList .searchList cover-view .line {
  width: 100%;
  height: 2rpx;
  position: absolute;
  bottom: 0;
  background-color: #f6f6f6;
}