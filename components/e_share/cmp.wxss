/* components/e_share/cmp.wxss */
.shareWrapper {
  position: fixed;
  width: 100%;
  height: 150rpx;
  bottom: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  z-index: 1;
}

.shareWrapper .mask {
  position: fixed;
  width: 100%;
  top: 0;
  bottom: 150rpx;
  background-color: rgba(0, 0, 0, .2);
}

.shareWrapper .group,
.shareWrapper .friends {
  flex-grow: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.shareWrapper .group .btn {
  width: 80rpx;
  height: 80rpx;
  border: none;
  padding: 0;
}

.shareWrapper .group .btn .weixin {
  width: 100%;
  height: 100%;
}

.shareWrapper .friends .pengyouquan {
  width: 66rpx;
  height: 66rpx;
}

.shareWrapper .line {
  position: absolute;
  width: 2rpx;
  height: 80rpx;
  left: calc(50% - 1rpx);
  top: calc(50% - 40rpx);
  background-color: #f8f8f8;
}
